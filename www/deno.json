{
  "tasks": {
    "dev": "deno run -A lib/watch.ts html docs lib -- deno run -A main.ts",
    "build": "deno run -A docs/build.ts"
  },
  "lint": {
    "exclude": ["docs/esm"],
    "rules": {
      "exclude": ["prefer-const", "require-yield"]
    }
  },
  "fmt": {
    "exclude": ["docs/esm"]
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hastx"
  },
  "imports": {
    "effection": "../mod.ts",
    "freejack/": "./lib/",
    "hastx/": "https://deno.land/x/hastx@0.0.1/",
    "hastx/jsx-runtime": "https://deno.land/x/hastx@v0.0.1/jsx-runtime.ts"
  }
}
